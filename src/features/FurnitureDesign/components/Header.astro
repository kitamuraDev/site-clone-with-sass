<header id="header">
  <h1><a href="/furniture-design">Furniture Design</a></h1>
  <nav>
    <ul>
      <li><a href="/furniture-design/products">PRODUCTS</a></li>
      <li><a href="/furniture-design/about">ABOUT</a></li>
      <li><a href="/furniture-design/company">COMPANY</a></li>
      <li><a href="">CONTACT</a></li>
    </ul>
  </nav>
  <button class="toggle-btn">
    <span class="menu-line"></span>
    <span class="menu-line"></span>
  </button>
  <div id="mask"></div>
</header>

<style lang="scss">
  @import '../styles/variable';

  header {
    @include container;

    height: 80px;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    left: 0;
    right: 0;
    z-index: 10;

    a {
      text-decoration: none;
      color: $base-text-color;
    }

    h1 {
      font-size: 20px;
    }
  }

  .toggle-btn {
    cursor: pointer;
    border: none;
    background-color: transparent;
    width: 30px;
    height: 30px;
    position: relative;
    z-index: 20;

    .menu-line {
      position: absolute;
      display: inline-block;
      left: 0;
      width: 100%;
      height: 2px;
      border-radius: 4px;
      transition: all 0.5s;
      background-color: #333;
    }
    .menu-line:nth-child(1) {
      top: 10px;
    }
    .menu-line:nth-child(2) {
      bottom: 10px;
    }
  }
  .open .menu-line {
    background-color: #fff;
  }
  .open .menu-line:nth-child(1) {
    transform: translateY(4px) rotate(-45deg);
  }
  .open .menu-line:nth-child(2) {
    transform: translateY(-4px) rotate(45deg);
  }

  nav {
    position: fixed;
    top: 0;
    left: -300px;
    opacity: 0;
    width: 300px;
    padding: 36px 50px;
    transition: all 0.5s;
    z-index: 20;

    li {
      margin-bottom: 12px;

      a {
        color: $nav-text-color;
        font-size: 14px;
      }
    }
  }
  .open nav {
    left: 0;
    opacity: 10;
  }

  #mask {
    display: none;
    transition: all 0.5s;
  }
  .open #mask {
    cursor: pointer;
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.8;
    z-index: 10;
  }
</style>

<script>
  const header = document.querySelector('#header')!;
  const toggleBtn = document.querySelector('.toggle-btn')!;
  const mask = document.querySelector('#mask')!;

  toggleBtn.addEventListener('click', () => header.classList.toggle('open'));
  mask.addEventListener('click', () => header.classList.remove('open'));
</script>
