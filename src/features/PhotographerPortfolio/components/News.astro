<style lang="scss">
  @import '../styles/variable';
  $border-color: #c8c8c8;

  dl {
    display: flex;
    flex-wrap: wrap;
    border-top: 1px solid $border-color;

    @include sp {
      flex-direction: column;
    }

    dt {
      width: 20%;
      padding: 15px;
      border-bottom: 1px solid $border-color;

      @include sp {
        width: auto;
        padding-bottom: 0;
        border-bottom: none;
      }
    }
    dd {
      width: 80%;
      padding: 15px;
      border-bottom: 1px solid $border-color;

      @include sp {
        width: 100%;
        padding-top: 0;
      }
    }
  }
</style>
