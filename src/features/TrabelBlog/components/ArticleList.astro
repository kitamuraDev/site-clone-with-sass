const img2 = '/TrabelBlog/main2.jpg';
const img3 = '/TrabelBlog/main3.jpg';

const imgs = [img1, img2, img3];
---

<main>
  {
    imgs.map((img) => (
      <article>
        <h2>
          <a href="#">タイトルテキストテキストテキストテキストテキスト</a>
        </h2>
        <div class="meta">
          <p>2020/01/01</p>
