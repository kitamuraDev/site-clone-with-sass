---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
  <div class="wrapper">
    <h1>Welcome to Astro</h1>
  </div>
</Layout>

<style lang="scss">
  @import '../styles/breakpoints';
  .wrapper {
    width: min(100% - 2rem, 960px);
    margin-inline: auto;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;

    h1 {
      font-size: 32px;
      font-weight: 700;
      color: #1c1c1c;

      @include sp {
        color: greenyellow;
      }
    }
  }
</style>
