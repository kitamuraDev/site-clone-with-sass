<style lang="scss">
  @import '../../../features/FurnitureDesign/styles/variable';

  main {
    font-size: 14px;
    font-weight: 400;
    color: $base-text-color;
  }

  .container {
    @include container;
    padding-top: 120px;
    padding-bottom: 160px;
  }

  .container h1 {
    font-size: 14px;
    font-weight: 400;
    margin-bottom: 30px;
  }

  .container a {
    display: block;
    text-align: center;
    font-size: 14px;
    font-weight: 400;
    color: $base-text-color;
    text-decoration: none;
  }

  .item-wrapper {
    max-width: 800px;
    display: flex;
    justify-content: space-between;
    margin-bottom: 60px;

    @include sp {
      flex-direction: column;
    }
  }

  .item-wrapper img {
    @include sp {
      width: 100%;
      margin-bottom: 30px;
    }
  }

  .item-wrapper .content {
    width: 42%;

    @include sp {
      width: 100%;
    }

    p {
      margin-bottom: 30px;
    }
  }

  dl {
    display: flex;
    flex-wrap: wrap;

    dt {
      width: 30%;
    }
    dd {
      width: 70%;
    }
  }
</style>
